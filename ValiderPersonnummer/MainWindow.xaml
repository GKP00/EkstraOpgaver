<Window x:Class="ValiderPersonnummer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValiderPersonnummer"
        mc:Ignorable="d"
        FontSize="32"
        ResizeMode="NoResize"
        Title="Personnummer Validering" Height="190" Width="410">

  <Grid>

    <StackPanel Margin="5,0,5,5">
      <DockPanel>
        <Label Padding="0,0,0,0">Indtast CPR:</Label>
        <Label x:Name="SvarLabel" Padding="0,0,0,0" FontSize="32" FontWeight="DemiBold" HorizontalContentAlignment="Center"></Label>
      </DockPanel>
      <TextBox x:Name="Input" TextChanged="InputÆndret" Margin="0,5,0,0"></TextBox>
      <Button Click="Valider_Click" Margin="0,5">Valider</Button>
    </StackPanel>


  </Grid>
</Window>
